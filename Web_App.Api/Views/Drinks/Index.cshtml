@using RepositoryPatternWithUOW.Core.Models
@model IEnumerable<Drink>
<h1>ALL Drinks </h1>

<table class="table"style="width: 25%">
    <thead> 
        <tr>
            <th>
                @Html.DisplayName("Drink Name")
            </th>
            <th>
                @Html.DisplayName("Drink Quantity")
            </th>
             <th>
                @Html.DisplayName("Description")
            </th>
             <th>
                @Html.DisplayName("Produce Date")
                </th>
             <th>
                @Html.DisplayName("Expiration Date")
            </th>
            <th>
                @Html.DisplayName("Price")
            </th>
            <th>
                @Html.DisplayName("State")
            </th>
            <th>
                Edit
            </th>
        </tr>
        

    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.DrinkName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProduceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @if(item.ExpirationDate < DateTime.Now)
                        {
                            <span class="text-danger" style="color:red">Expierd</span>
                        }
                        else
                        {
                            <span style="color:green">Good</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update" , new {Id = item.Id})
                        @Html.ActionLink("Delete", "Delete" , new {Id = item.Id },new{ onclick ="return confirm('Are you sure you want to delete this Drink?');"}  )
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
